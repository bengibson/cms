<%= hidden_field_tag :popup, params[:popup] %>
<fieldset>
  <p class="title">
    <%= f.label :alt, "Alt text" %><br />
    <%= f.text_field :alt, :size => 60, :class => 'large' %>
    <%= f.error_message_on :alt %>    
  </p>

  <div class="actions">
    <%= link_to '&larr; Cancel and go back', :action => 'index', :popup => params[:popup] %> &nbsp;
    <input type="submit" value="Save changes" />
  </div>
</fieldset>
